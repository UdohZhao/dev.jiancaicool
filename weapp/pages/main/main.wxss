page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.placeholder{
    margin: 10rpx;
    padding: 0 20rpx;
}
.slide-image{
   width: 100%;
   height: 100%;
}
.weui-navbar{
  background-color: #ffffff;
}
.commodity-panel{
    background-color: #f8f8f8;
}
.commodity-flex{
  width: 50%;
  display: inline-flex;
}
.commodity-box{
  background-color: #ffffff;
  position: relative;
}
.img-thumb{
  width: 100%;
  height: 150px;
}
.commodity-title{
  font-size: 32rpx;
  padding: 0 10rpx;
  height: 100rpx;
  overflow: hidden;
}
.commodity-price{
  position: absolute;
  top: 0;
  right: 0;
  background-color: #000000;
  background:rgba(0,0,0,0.3);
  color: #ffffff;
  width: 70px;
  font-size: 16px;
  text-align: center;
}
.banner{
  width: 100%;
  height: 160rpx;
}
.goods-price{
  color: #FC140D;
  display: inline;
  padding: 10rpx;
  font-size: 25rpx;
}
.goods-sales-volume{
  color: #808080;
  font-size: 25rpx;
  float: right;
  margin: 20rpx;
  margin-right: 15rpx;
}
.gc-grids{
  background-color: #ffffff;
  border: 0rpx;
}
.gc-grid{
  width: 20%;
  border: 0rpx;
  padding: 20rpx;
}
.goods-box{
  padding: 0;
}
.hot-recommend{
  text-align: center;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}